<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <style>
        #chat{
            max-height: 300px;
            min-height: 300px;
            background: rgb(118, 250, 129);
            overflow-y: scroll;
        }
    </style>
</head>
<body>

   <h1>Chat do Guia</h1>
   <div id="chat">

   </div><br>
   <input type="text" name="" id="msg" class="form-control" placeholder="Msg"/>
   <input type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control"/>
   <button onclick="enviar()" class="btn btn-primary mt-4" >Enviar</button>

</body>

 <!--import do socket io para front end-->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js"></script>
 <script>
     var socket = io("http://localhost:8080");

     socket.on("disconnect", () => {
         console.log("Desconectado!")
     })


     //exibindo as mensagens 
     socket.on("showmsg", data => {
         var chat = document.getElementById("chat");
         var p = document.createElement("p");
         p.innerHTML = data.username + ": " + data.msg;
         chat.append(p);
     })



     function enviar(){
         var msgField = document.getElementById("msg");
         var usernameField = document.getElementById("username");

         var msg = msgField.value;
         var username = usernameField.value

         socket.emit("msg", {msg: msg, username: username});
     }

 </script>
</html>